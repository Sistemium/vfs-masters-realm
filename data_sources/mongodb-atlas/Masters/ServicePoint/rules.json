{
    "database": "Masters",
    "collection": "ServicePoint",
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.isAdmin": true
            },
            "document_filters": {
                "read": true,
                "write": true
            },
            "insert": true,
            "delete": true,
            "search": true,
            "read": true,
            "write": true
        },
        {
            "name": "denyAllAccess",
            "apply_when": {
                "%%user.custom_data.masterId": null
            },
            "document_filters": {
                "read": false,
                "write": false
            },
            "insert": false,
            "delete": false,
            "search": false,
            "read": false,
            "write": false
        },
        {
            "name": "user",
            "apply_when": {},
            "document_filters": {
                "read": {
                    "$or": [
                        {
                            "masterIds": "%%user.custom_data.masterId"
                        },
                        {
                            "assigneeIds": "%%user.custom_data.masterId"
                        }
                    ]
                },
                "write": {
                    "$or": [
                        {
                            "masterIds": "%%user.custom_data.masterId"
                        },
                        {
                            "assigneeIds": "%%user.custom_data.masterId"
                        }
                    ]
                }
            },
            "insert": true,
            "delete": true,
            "search": true,
            "read": true,
            "write": true
        }
    ]
}
