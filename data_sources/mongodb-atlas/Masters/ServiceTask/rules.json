{
    "database": "Masters",
    "collection": "ServiceTask",
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.isAdmin": true
            },
            "document_filters": {
                "read": true,
                "write": true
            },
            "insert": true,
            "delete": true,
            "search": true,
            "read": true,
            "write": true
        },
        {
            "name": "denyAllAccess",
            "apply_when": {
                "%%user.custom_data.masterId": null
            },
            "document_filters": {
                "read": false,
                "write": false
            },
            "read": false,
            "write": false
        }
    ]
}
