{
    "database": "Masters",
    "collection": "ArticlePricing",
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.isAdmin": true
            },
            "document_filters": {
                "read": true,
                "write": false
            },
            "insert": false,
            "delete": false,
            "search": true,
            "read": true,
            "write": false
        },
        {
            "name": "denyAllAccess",
            "apply_when": {
                "%%user.custom_data.masterId": null
            },
            "document_filters": {
                "read": false,
                "write": false
            },
            "insert": false,
            "delete": false,
            "search": false,
            "read": false,
            "write": false
        },
        {
            "name": "userWithMasterId",
            "apply_when": {
                "%%user.custom_data.isAdmin": false,
                "%%user.custom_data.masterId": {
                    "$exists": true,
                    "$ne": null
                }
            },
            "document_filters": {
                "read": {
                    "$or": [
                        {
                            "master": {
                                "$exists": false
                            }
                        },
                        {
                            "master": null
                        },
                        {
                            "master": "%%user.custom_data.masterId"
                        }
                    ]
                },
                "write": false
            },
            "insert": false,
            "delete": false,
            "search": true,
            "read": true,
            "write": false
        }
    ]
}
