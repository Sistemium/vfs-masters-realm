{
    "collection": "Master",
    "database": "Masters",
    "roles": [
        {
            "name": "admin",
            "apply_when": {
                "%%user.custom_data.isAdmin": true
            },
            "document_filters": {
                "write": true,
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "denyAllAccess",
            "apply_when": {
                "%%user.custom_data.masterId": null
            },
            "document_filters": {
                "write": false,
                "read": false
            },
            "read": false,
            "write": false,
            "insert": false,
            "delete": false,
            "search": false
        },
        {
            "name": "user",
            "apply_when": {},
            "document_filters": {
                "write": {
                    "_id": "%%user.custom_data.masterId"
                },
                "read": {
                    "_id": "%%user.custom_data.masterId"
                }
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        }
    ]
}
